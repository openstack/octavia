#!/bin/bash

# Don't try to run the directory when it is empty
shopt -s nullglob

status=0
for file in {{ check_scripts_dir }}/*
do
  echo "Running check script: " $file
  sh $file
  status=$(( $status + $? ))
done
exit $status
